[
  {
    "key": "ctrl+n",
    "command": "explorer.newFile",
    "when": "filesExplorerFocus"
  },
  {
    "key": "ctrl+shift+n",
    "command": "explorer.newFolder",
    "when": "filesExplorerFocus"
  },
  { "key": "ctrl+shift+s", "command": "workbench.action.files.saveAll" },

  {
    "key": "ctrl+shift+e",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "!editorFocus"
  },

  { "key": "ctrl+o", "command": "workbench.action.navigateBack" },
  { "key": "alt+left", "command": "workbench.action.navigateBack" },
  { "key": "alt+right", "command": "workbench.action.navigateForward" },

  { "key": "ctrl+w ctrl+w", "command": "workbench.action.closeActiveEditor" },

  { "key": "ctrl+w r", "command": "workbench.action.splitEditor" },
  { "key": "ctrl+w d", "command": "workbench.action.splitEditorDown" },

  { "key": "ctrl+w left", "command": "workbench.action.focusLeftGroup" },
  { "key": "ctrl+w down", "command": "workbench.action.focusBelowGroup" },
  { "key": "ctrl+w up", "command": "workbench.action.focusAboveGroup" },
  { "key": "ctrl+w right", "command": "workbench.action.focusRightGroup" },

  { "key": "ctrl+w ctrl+down", "command": "workbench.action.decreaseViewSize" },
  { "key": "ctrl+w ctrl+up", "command": "workbench.action.increaseViewSize" },

  {
    "key": "ctrl+w shift+left",
    "command": "workbench.action.moveActiveEditorGroupLeft"
  },
  {
    "key": "ctrl+w shift+down",
    "command": "workbench.action.moveActiveEditorGroupDown"
  },
  {
    "key": "ctrl+w shift+up",
    "command": "workbench.action.moveActiveEditorGroupUp"
  },
  {
    "key": "ctrl+w shift+right",
    "command": "workbench.action.moveActiveEditorGroupRight"
  },

  {
    "key": "ctrl+w z",
    "command": "workbench.action.toggleMaximizeEditorGroup"
  },

  { "key": "ctrl+w j", "command": "workbench.action.joinAllGroups" },

  {
    "key": "/",
    "command": "list.find",
    "when": "listFocus && listSupportsFind"
  },
  {
    "key": "ctrl+f",
    "command": "list.find",
    "when": "listFocus && listSupportsFind"
  },

  { "key": "ctrl+backspace", "command": "workbench.action.zoomReset" }
]

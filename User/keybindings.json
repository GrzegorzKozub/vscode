[
  {
    "key": "ctrl+n",
    "command": "explorer.newFile",
    "when": "filesExplorerFocus"
  },
  {
    "key": "ctrl+shift+n",
    "command": "explorer.newFolder",
    "when": "filesExplorerFocus"
  },
  { "key": "ctrl+shift+s", "command": "workbench.action.files.saveAll" },

  {
    "key": "ctrl+shift+e",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "!editorFocus"
  },

  { "key": "ctrl+o", "command": "workbench.action.navigateBack" },
  { "key": "ctrl+i", "command": "workbench.action.navigateForward" },

  { "key": "ctrl+k r", "command": "workbench.action.splitEditor" },
  { "key": "ctrl+k d", "command": "workbench.action.splitEditorDown" },

  { "key": "alt+r", "command": "workbench.action.splitEditor" },
  { "key": "alt+d", "command": "workbench.action.splitEditorDown" },

  { "key": "ctrl+k left", "command": "workbench.action.focusLeftGroup" },
  { "key": "ctrl+k down", "command": "workbench.action.focusBelowGroup" },
  { "key": "ctrl+k up", "command": "workbench.action.focusAboveGroup" },
  { "key": "ctrl+k right", "command": "workbench.action.focusRightGroup" },

  { "key": "alt+left", "command": "workbench.action.focusLeftGroup" },
  { "key": "alt+down", "command": "workbench.action.focusBelowGroup" },
  { "key": "alt+up", "command": "workbench.action.focusAboveGroup" },
  { "key": "alt+right", "command": "workbench.action.focusRightGroup" },

  { "key": "ctrl+k ctrl+left", "command": "workbench.action.decreaseViewSize" },
  {
    "key": "ctrl+k ctrl+down",
    "command": "workbench.action.decreaseViewHeight"
  },
  { "key": "ctrl+k ctrl+up", "command": "workbench.action.increaseViewHeight" },
  {
    "key": "ctrl+k ctrl+right",
    "command": "workbench.action.increaseViewSize"
  },

  {
    "key": "ctrl+k shift+left",
    "command": "workbench.action.moveActiveEditorGroupLeft"
  },
  {
    "key": "ctrl+k shift+down",
    "command": "workbench.action.moveActiveEditorGroupDown"
  },
  {
    "key": "ctrl+k shift+up",
    "command": "workbench.action.moveActiveEditorGroupUp"
  },
  {
    "key": "ctrl+k shift+right",
    "command": "workbench.action.moveActiveEditorGroupRight"
  },

  {
    "key": "/",
    "command": "list.find",
    "when": "listFocus && listSupportsFind"
  },
  {
    "key": "ctrl+f",
    "command": "list.find",
    "when": "listFocus && listSupportsFind"
  }
]

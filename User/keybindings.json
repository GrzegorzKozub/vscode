[
  // explorer
  { "key": "ctrl+n", "command": "explorer.newFile" },
  { "key": "ctrl+shift+n", "command": "explorer.newFolder" },
  // editor
  { "key": "ctrl+f4", "command": "workbench.action.closeActiveEditor" },
  { "key": "ctrl+shift+s", "command": "workbench.action.files.saveAll" },
  // focus
  {
    "key": "ctrl+escape",
    "command": "workbench.action.focusActiveEditorGroup"
  },
  {
    "key": "ctrl+shift+e",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "inEditorsPicker"
  },
  { "key": "ctrl+shift+b", "command": "outline.focus" },
  {
    "key": "ctrl+shift+b",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "!editorFocus && outline.active"
  },
  // navigation
  {
    "key": "alt+left",
    "command": "workbench.action.navigateBack",
    "when": "canNavigateBack"
  },
  {
    "key": "alt+right",
    "command": "workbench.action.navigateForward",
    "when": "canNavigateForward"
  }
]
